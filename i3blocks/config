# https://github.com/vivien/i3blocks/wiki/Writing-Your-Own-Blocklet
# http://www.pygtk.org/pygtk2reference/pango-markup-language.html

command=/usr/local/libexec/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango

# Volume indicator
[volume]
label=â™ª
instance=Master
interval=once
signal=10

[bandwidth]
command=echo "<span foreground=\"#bbbbcc\">`/usr/local/libexec/i3blocks/bandwidth`</span>" | tr [:upper:] [:lower:]
interval=5

# Date Time
[time]
command=echo "<span foreground=\"#a4cfcf\">`date '+%a %m-%d %H:%M:%S'`</span>"; [[ $BLOCK_BUTTON == 1 ]] && gsimplecal &
interval=5
